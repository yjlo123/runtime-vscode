{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Runtime Script",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#comment"
		},
		{
			"include": "#label"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#decimal"
		},
		{
			"include": "#constant"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.runtime",
				"match": "^[ \t]*(?:let|jmp|slp|tim|add|sub|mul|mod|div|psh|pop|pol|put|get|key|del|int|str|typ|prs|drw|drt|pxl|clr|prt|inp|rnd|j(?:eq|ne|lt|gt)|ife|ifg|els|fin|def|ret|end|cal)\\b"
			}]
		},
		"comment": {
			"name": "comment.runtime",
			"match": "/.*$"
		},
		"label": {
			"name": "entity.name.function.runtime",
			"match": "^[ \t]*#[^\\s]*\\b"
		},
		"variables": {
			"name": "variable.parameter.runtime",
			"match": "\\$[^\\s]+"
		},
		"decimal": {
			"name": "constant.character.runtime",
			"match": "[+-]?[0-9]+\\b"
		},
		"constant": {
			"name": "constant.character.runtime",
			"match": "({}|\\[\\])"
		},
		"strings": {
			"name": "string.quoted.double.runtime",
			"begin": "(\"|')",
			"end": "\\1",
			"patterns": [
				{
					"name": "constant.character.escape.runtime",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.runtime"
}